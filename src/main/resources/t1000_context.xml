<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="toshiba_context.xml"/>
    <import resource="sony_context.xml"/>

    <bean id="t1000" class="org.pantheon.robot.ModelT1000"
          parent="baseModel"
          scope="prototype">
        <constructor-arg value="silver" type="java.lang.String"/>
        <constructor-arg value="2006" type="int"/>
        <constructor-arg value="true" type="boolean"/>
    </bean>

    <bean id="baseModel" class="org.pantheon.robot.BaseModel" abstract="true">
        <constructor-arg ref="toshibaHead"/>
        <constructor-arg ref="toshibaHand"/>
        <constructor-arg ref="toshibaLeg"/>
    </bean>

</beans>